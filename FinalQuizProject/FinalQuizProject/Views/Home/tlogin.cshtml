@model FinalQuizProject.Models.TBL_ADMIN

@{
    ViewBag.Title = "tlogin";
}

<h2>Login as Teacher</h2>


@if (ViewBag.error != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.error
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Teacher Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control", @required = true } })
                @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Teacher Password</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control",@required = true } )
                @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>
}
